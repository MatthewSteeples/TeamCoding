<UserControl x:Class="TeamCoding.VisualStudio.ToolWindows.Overview.OverviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="OverviewToolWindow">
    <Grid>
        <TreeView x:Name="tvUserDocuments" ItemsSource="{Binding Mode=OneWay}">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Header="{Binding Identity.DisplayName}" ItemsSource="{Binding Documents}">
                        <TreeViewItem.Template>
                            <ControlTemplate>
                                <TextBlock Text="{Binding RelativePath}" />
                            </ControlTemplate>
                        </TreeViewItem.Template>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

    </Grid>
</UserControl>
