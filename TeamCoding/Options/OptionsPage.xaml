<UserControl x:Class="TeamCoding.Options.OptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamCoding.Options"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid RenderTransformOrigin="0.488,0.748">
        <TextBox x:Name="txtUsername" Margin="68,0,10,0" Height="26" VerticalAlignment="Top" Text="{Binding Username, Mode=TwoWay}" ToolTip="Set a custom username"/>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserImageUrl" Margin="68,35,10,0" Height="23" VerticalAlignment="Top" Text="{Binding UserImageUrl}" ToolTip="Set a custom image url"/>
        <Label x:Name="lblUserUrl" Content="User Url" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,31,0,0"/>
        <TextBox x:Name="txtFileBasedPersisterPath" Margin="68,66,10,0" Height="23" VerticalAlignment="Top" Text="{Binding FileBasedPersisterPath}" ToolTip="Set a shared directory to use to share your coding sessions"/>
        <Label x:Name="lblShare" Content="Share" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,62,0,0"/>
        <StatusBar Margin="10,0,10,10" Height="23" VerticalAlignment="Bottom">
            <StatusBarItem Name="sbiTitle" FontSize="12" FontWeight="Bold"></StatusBarItem>
            <StatusBarItem Name="sbiDescription" FontSize="12"></StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
